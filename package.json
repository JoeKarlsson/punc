{
  "name": "punc",
  "version": "2.0.0",
  "description": "Ever wonder what your favorite books look like without words?",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "lib"
  ],
  "scripts": {
    "build": "tsc && esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js --external:pdfkit --external:through2",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "punc",
    "punctuation",
    "digital humanities",
    "text analysis",
    "literature"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/JoeKarlsson/punc.git"
  },
  "author": "Ray Farias <rayrfarias@gmail.com> (https://github.com/sgnl)",
  "homepage": "https://github.com/JoeKarlsson/punc",
  "bugs": "https://github.com/JoeKarlsson/punc/issues",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "pdfkit": "^0.14.0",
    "through2": "^4.0.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.17",
    "@types/pdfkit": "^0.17.3",
    "@types/through2": "^2.0.41",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "esbuild": "^0.25.10",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  }
}
