{
  "name": "punc",
  "version": "2.0.0",
  "description": "Ever wonder what your favorite books look like without words?",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "lib"
  ],
  "scripts": {
    "build": "tsc && esbuild src/index.ts --bundle --platform=node --format=esm --outfile=dist/index.js --external:pdfkit --external:through2",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "markdown-lint": "markdownlint README.md --fix",
    "check": "npm run type-check && npm run lint && npm run markdown-lint && npm test",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "punc",
    "punctuation",
    "digital humanities",
    "text analysis",
    "literature"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/JoeKarlsson/punc.git"
  },
  "author": "Ray Farias <rayrfarias@gmail.com> (https://github.com/sgnl)",
  "homepage": "https://github.com/JoeKarlsson/punc",
  "bugs": "https://github.com/JoeKarlsson/punc/issues",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "pdfkit": "^0.14.0",
    "through2": "^4.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@swc/jest": "^0.2.36",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.11.17",
    "@types/pdfkit": "^0.17.3",
    "@types/through2": "^2.0.41",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "esbuild": "^0.25.10",
    "eslint": "^9.0.0",
    "jest": "^30.2.0",
    "markdownlint-cli": "^0.45.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  }
}
